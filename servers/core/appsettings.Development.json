{
    "ConnectionStrings": {
        "Database": "Host=coredb;Database=coredb;Username=postgres;Password=postgres"
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "ReverseProxy": {
        "Routes": {
            "parser-route": {
                "ClusterId": "parser-cluster",
                "AuthorizationPolicy": "CustomPolicy",
                "Match": {
                    "Path": "/parser/{**catch-all}"
                },
                "Transforms": [
                    {
                        "PathPattern": "{**catch-all}"
                    }
                ]
            },
            "signal-route": {
                "ClusterId": "signal-cluster",
                "Match": {
                    "Path": "/signal/{**catch-all}"
                },
                "Transforms": [
                    {
                        "PathPattern": "{**catch-all}"
                    }
                ]
            }
        },
        "Clusters": {
            "parser-cluster": {
                "Destinations": {
                    "destination": {
                        "Address": "http://parser:8000/"
                    }
                }
            },
            "signal-cluster": {
                "Destinations": {
                    "destination": {
                        "Address": "http://notify:5002/signal/"
                    }
                }
            }
        }
    }
}
