{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "ReverseProxy": {
        "Routes": {
            "parser-route": {
                "ClusterId": "parser-cluster",
                "Match": {
                    "Path": "/parser/{**catch-all}"
                },
                "Transforms": [
                    {
                        "PathPattern": "{**catch-all}"
                    }
                ]
            },
            "user-route": {
                "ClusterId": "user-cluster",
                "Match": {
                    "Path": "/user/{**catch-all}"
                },
                "Transforms": [
                    {
                        "PathPattern": "{**catch-all}"
                    }
                ]
            }
        },
        "Clusters": {
            "parser-cluster": {
                "Destinations": {
                    "destination": {
                        "Address": "http://parser:8000/"
                    }
                }
            },
            "user-cluster": {
                "Destinations": {
                    "destination": {
                        "Address": "http://user:5001/"
                    }
                }
            }
        }
    }
}
